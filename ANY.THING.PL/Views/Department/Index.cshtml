@using Project.BusineesLogic.DataTranserObject.DepartmentDTOS

@model IEnumerable<DepartementDTO>




<h1 class="my-3">All Departments </h>
    <br/> 
<a class="btn btn-primary my-3 " asp-controller="Department" asp-action="Create" >Create New Department</a>  

    @if (Model?.Any() ?? false)
    {
        <table class="table table-striped table-hover mt-2 fs-4">
             <thead class="text-center">
                 <tr>
                       <th>
                         @Html.DisplayNameFor(model => model.Code)
                     </th>
                        <th>
                         @Html.DisplayNameFor(model => model.Name)
                     </th>
                        <th>
                         @Html.DisplayNameFor(model => model.DateOfCreation)
                     </th>
                        <th>
                         @Html.DisplayNameFor(model => model.Description)
                     </th>

                        <th>Details</th> 
                            
                        <th>Update</th>   
                        
                        <th>Delate</th>


                         
                      
                 </tr>
             </thead>
             <tbody >
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">

                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>@item.DateOfCreation</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Department" asp-action="Details" asp-route-Id="@item.DeptId"> <i class="fas fa-eye"></i> Details</a>
                            </td>
                            <td>
                                <a class="btn btn-success" asp-controller="Department" asp-action="Edit" asp-route-Id="@item.DeptId"><i class="fas fa-edit"></i> Update</a>
                            </td>
                            <td><button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@item.DeptId" >
                                    <i class="fas fa-trash"></i> Delete
                                 </button>
                                  <div class="modal fade" id="DeleteModal-@item.DeptId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Department</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are You Sure to Delete this Department?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Department" asp-route-id="@item.DeptId" class="mt-4" >
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
                       </div>
                    </div>
            </div>
        </div>
                               @* <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-Id="@item.DeptId" ><i class="fas fa-trash"></i> Delete</a> *@
  </td>
    
                        </tr>
                    }
             </tbody>
        </table>
        
    }
    else
    {
        <div class="alret alert-info mt-2 bg-info bg-opacity-25 py-3 w-100">
            <h1 ml-2 >No Departments Found!!</h1>
        </div>
    }

 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
